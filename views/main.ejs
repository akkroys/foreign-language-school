    <script>
        let currentTestimonialIndex = 0;

        function showTestimonial(index) {
            const testimonials = document.querySelector('.testimonials');
            const testimonialCount = document.querySelectorAll('.testimonial').length;
            if (index >= testimonialCount / 3) {
                currentTestimonialIndex = 0;
            } else if (index < 0) {
                currentTestimonialIndex = Math.floor(testimonialCount / 3) - 1;
            } else {
                currentTestimonialIndex = index;
            }
            testimonials.style.transform = `translateX(-${currentTestimonialIndex * 100}%)`;
        }

        function nextTestimonial() {
            showTestimonial(currentTestimonialIndex + 1);
        }

        function prevTestimonial() {
            showTestimonial(currentTestimonialIndex - 1);
        }
    </script>

